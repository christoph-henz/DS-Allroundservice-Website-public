        try {
            // Load template
            $template = $this->query("SELECT * FROM email_templates WHERE template_key = ? AND is_active = 1", [$templateKey]);
            if (!$template) {
                throw new Exception("Template not found: $templateKey");
            }
            
            // Get all variables
