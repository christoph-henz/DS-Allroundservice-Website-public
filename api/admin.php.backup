    private function getEmailDetails() {
        try {
            error_log("\n" . str_repeat('=', 80));
            error_log("ðŸ“§ getEmailDetails() - START");
            error_log(str_repeat('=', 80));
            
            // Check permission
            if (!$this->hasPermission('email_inbox_view')) {
                error_log("âŒ Permission denied for email_inbox_view");
                return $this->error('Keine Berechtigung fÃ¼r E-Mail-Details');
            }
            error_log("âœ… Permission check passed");
            
            $emailId = (int)($_GET['id'] ?? 0);
            error_log("ðŸ“¥ Email ID from GET: " . var_export($_GET['id'] ?? 'NONE', true));
            error_log("ðŸ”¢ Parsed Email ID: " . $emailId);
            
            if (!$emailId) {
                error_log("âŒ No email ID provided");
                return $this->error('E-Mail-ID erforderlich');
            }
            
            error_log("ðŸ“¬ Creating EmailInbox instance...");
            $emailInbox = $this->getEmailInboxInstance();
            $inboxClass = get_class($emailInbox);
            error_log("âœ… EmailInbox instance created: " . $inboxClass);
            
            error_log("ðŸ” Fetching email details for ID: " . $emailId);
            $email = $emailInbox->getEmailDetails($emailId);
            
            if (!$email) {
                error_log("âŒ Email not found or getEmailDetails returned null");
                error_log("âŒ EmailInbox class: " . $inboxClass);
                error_log("âŒ Email ID: " . $emailId);
                return $this->error('E-Mail nicht gefunden');
            }
            
            error_log("âœ… Email details retrieved successfully");
            error_log("ðŸ“Š Email data keys: " . implode(', ', array_keys($email)));
            error_log("ðŸ“§ Email subject: " . ($email['subject'] ?? 'N/A'));
            
            // ðŸ”§ FIX: Load unread status from Event Store instead of IMAP
            // This ensures consistency with the email list (which loads from snapshots)
            try {
                // ðŸš€ PERFORMANCE: Get status from snapshot by loading only the metadata
                $snapshotStmt = $this->db->query("
                    SELECT snapshot_data 
                    FROM email_snapshots 
                    WHERE folder IN ('inbox', 'INBOX')
                    ORDER BY created_at DESC 
                    LIMIT 1
                ");
                $snapshot = $snapshotStmt->fetch(PDO::FETCH_ASSOC);
                
                if ($snapshot && !empty($snapshot['snapshot_data'])) {
                    $snapshotEmails = json_decode($snapshot['snapshot_data'], true);
                    if (is_array($snapshotEmails)) {
                        // Find the email in the snapshot
                        foreach ($snapshotEmails as $listEmail) {
                            if (isset($listEmail['id']) && $listEmail['id'] == $emailId) {
                                // Check for recent events that might have changed the status
                                $eventStmt = $this->db->prepare("
                                    SELECT event_type, event_data 
                                    FROM email_events 
                                    WHERE email_uid = :uid
                                    AND event_type IN ('email_read', 'email_unread')
                                    ORDER BY sequence_number DESC 
                                    LIMIT 1
                                ");
                                $eventStmt->execute([':uid' => $email['uid']]);
                                $recentEvent = $eventStmt->fetch(PDO::FETCH_ASSOC);
                                
                                if ($recentEvent) {
                                    // Use the most recent event status
                                    $email['unread'] = ($recentEvent['event_type'] === 'email_unread');
                                    $email['seen'] = !$email['unread'];
                                    error_log("ðŸ”„ Updated status from recent event: " . $recentEvent['event_type'] . " â†’ unread=" . var_export($email['unread'], true));
                                } else {
                                    // Use snapshot status
                                    $email['unread'] = $listEmail['unread'] ?? false;
                                    $email['seen'] = $listEmail['seen'] ?? true;
                                    error_log("ðŸ”„ Updated status from snapshot: unread=" . var_export($email['unread'], true));
                                }
                                break;
                            }
                        }
                    }
                }
            } catch (Exception $e) {
                error_log("âš ï¸ Could not load status from EventStore: " . $e->getMessage());
                // Keep the IMAP status as fallback
            }
            
            // âš¡ FIX: Verify JSON encoding works before returning
            $testJson = json_encode($email);
            if ($testJson === false) {
                error_log("âŒ JSON encoding failed: " . json_last_error_msg());
                error_log("âš ï¸ Attempting to clean email data...");
                
                // Try to clean the data
                $email = $this->cleanEmailDataForJson($email);
                
                // Test again
                $testJson = json_encode($email);
                if ($testJson === false) {
                    error_log("âŒ JSON encoding still failed after cleaning");
                    return $this->error('JSON encoding error: ' . json_last_error_msg());
                }
                
                error_log("âœ… JSON encoding successful after cleaning");
            }
            
            error_log(str_repeat('=', 80) . "\n");
            
            return $this->success([
                'email' => $email
            ]);
            
        } catch (Exception $e) {
            error_log("âŒ Exception in getEmailDetails: " . $e->getMessage());
            error_log("âŒ Stack trace: " . $e->getTraceAsString());
            error_log(str_repeat('=', 80) . "\n");
            return $this->error('Fehler beim Laden der E-Mail-Details: ' . $e->getMessage());
        }
    }
    
