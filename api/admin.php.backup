    /**
     * Rate Limiting - verhindert zu viele Anfragen
     */
    private function checkRateLimit($action) {
        // Rate Limiting nur fÃ¼r authentifizierte Benutzer
        if (!isset($_SESSION['user_id'])) {
            return true; // Ã–ffentliche Actions haben eigenes Limit
        }
        
        $userId = $_SESSION['user_id'];
        $now = time();
        
        // Initialisiere Rate Limit Array
        if (!isset($_SESSION['rate_limit'])) {
            $_SESSION['rate_limit'] = [];
        }
        
        // Limit pro Minute: 120 Requests
        $limitPerMinute = 120;
        $windowSeconds = 60;
        
        // Key fÃ¼r diese Action
        $key = $action . '_' . $userId;
        
        // Hole oder initialisiere Daten fÃ¼r diesen Key
        if (!isset($_SESSION['rate_limit'][$key])) {
            $_SESSION['rate_limit'][$key] = [
                'count' => 0,
                'reset' => $now + $windowSeconds
            ];
        }
        
        $limit = &$_SESSION['rate_limit'][$key];
        
        // PrÃ¼fe ob Window abgelaufen ist
        if ($now > $limit['reset']) {
            $limit['count'] = 0;
            $limit['reset'] = $now + $windowSeconds;
        }
        
        // PrÃ¼fe ob Limit erreicht
        if ($limit['count'] >= $limitPerMinute) {
            error_log("âš ï¸ Rate limit exceeded for user $userId, action $action");
            return false;
        }
        
        // ErhÃ¶he Counter
        $limit['count']++;
        
        return true;
    }
    
