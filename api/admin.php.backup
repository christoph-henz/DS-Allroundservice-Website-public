    public function handleRequest() {
        try {
            // Debug logging for API calls
            error_log("Admin API called with REQUEST_METHOD: " . ($_SERVER['REQUEST_METHOD'] ?? 'UNKNOWN'));
            error_log("Admin API called with REQUEST_URI: " . ($_SERVER['REQUEST_URI'] ?? 'UNKNOWN'));
            error_log("Admin API called with GET params: " . print_r($_GET, true));
            
            // Get action from either URL parameter or JSON body
            $action = $_REQUEST['action'] ?? '';
            
            error_log("Admin API action: " . $action);
            
            // For POST requests, check if action is in JSON body
            if ($_SERVER['REQUEST_METHOD'] === 'POST' && empty($action)) {
                $input = json_decode(file_get_contents('php://input'), true);
                $action = $input['action'] ?? '';
            }
            
            // ========================================================================
            // SECURITY: Zentrale Authentifizierungs- und AutorisierungsprÃ¼fung
            // ========================================================================
            
            // Whitelist fÃ¼r Aktionen die OHNE Authentifizierung erlaubt sind
            // WICHTIG: Nur Permissions-Abfrage ist ohne Login erlaubt!
            $publicActions = [];
            
            // PrÃ¼fe ob Aktion Ã¶ffentlich ist
            $isPublicAction = in_array($action, $publicActions);
            
            // PrÃ¼fe Authentifizierung fÃ¼r alle nicht-Ã¶ffentlichen Aktionen
            if (!$isPublicAction) {
                if (!$this->isAuthenticated()) {
                    http_response_code(401);
                    error_log("ðŸ”’ Unauthorized access attempt to action: $action");
                    return $this->error('Nicht authentifiziert. Bitte melden Sie sich an.');
                }
                
                error_log("âœ… User authenticated: " . ($_SESSION['username'] ?? 'unknown') . " (Role: " . ($_SESSION['role'] ?? 'unknown') . ")");
            }
            
            // CSRF-Token Validierung fÃ¼r alle schreibenden Operationen
            if (!$isPublicAction && in_array($_SERVER['REQUEST_METHOD'], ['POST', 'PUT', 'DELETE'])) {
                // Ausnahme fÃ¼r File Downloads (haben keine CSRF-Tokens)
                if ($action !== 'download-attachment') {
                    if (!$this->validateCSRFToken()) {
                        http_response_code(403);
                        error_log("ðŸ”’ CSRF token validation failed for action: $action");
                        return $this->error('UngÃ¼ltiger CSRF-Token. Bitte laden Sie die Seite neu.');
                    }
                }
            }
            
            // Permission-basierte Zugriffskontrolle
            $requiredPermission = $this->getRequiredPermission($action);
            if ($requiredPermission && !$this->hasPermission($requiredPermission)) {
                http_response_code(403);
                error_log("ðŸ”’ Permission denied for action: $action (required: $requiredPermission)");
                return $this->error('Keine Berechtigung fÃ¼r diese Aktion.');
            }
            
            // Rate Limiting (Schutz vor Missbrauch)
            if (!$this->checkRateLimit($action)) {
                http_response_code(429);
                error_log("âš ï¸ Rate limit exceeded for action: $action");
                return $this->error('Zu viele Anfragen. Bitte warten Sie einen Moment.');
            }
            
            // ========================================================================
            // Action-Routing
            // ========================================================================
            
            switch ($action) {
                case 'dashboard':
                    return $this->getDashboardData();
                    
                case 'stats':
                    return $this->getStats();
                    
                case 'services':
                    return $this->getServices();
                    
                case 'service':
                    return $this->getService();
                    
                case 'service-list':
                    return $this->getServiceList();
                    
                case 'save-service':
